<?xml version="1.0" encoding="US-ASCII"?>

<else>
  <token>
    <name>array-iter</name>
    <description>loop iteration through a list</description>

    <list>list for a iterative traverse</list>
    <control-var>control variable for a iterative traverse</control-var>

    <body>
my $<r p="@control-var"/>; for ( $<r p="@control-var"/> = 0; $<r p="@control-var"/> &lt; @<r p="@list"/>; $<r p="@control-var"/>++ ) {
  $<r p="@list"/>[$<r p="@control-var"/>];
}
    </body>
</token>
</else>
